{
  "name": "sf-ui",
  "version": "0.1.0",
  "description": "An HTML/CSS/JS UI for visualizing scientific data.",
  "private": true,
  "scripts": {
    "test": "APP_VERSION=$npm_package_version jest",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "start": "APP_VERSION=$npm_package_version webpack serve --open",
    "build": "APP_VERSION=$npm_package_version webpack"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(css|less|sass)$": "<rootDir>/src/styleMock.css",
      "^components/(.*)": "<rootDir>/src/components/$1",
      "^model/(.*)": "<rootDir>/src/model/$1",
      "^util/(.*)": "<rootDir>/src/util/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/index.ts"
    ]
  },
  "keywords": [
    "sciformats"
  ],
  "author": "Robert Schiwon",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^29.2.4",
    "@types/plotly.js-dist-min": "^2.3.1",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "babel-jest": "^29.3.1",
    "css-loader": "^6.7.3",
    "eslint": "^8.30.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "node-polyfill-webpack-plugin": "^2.0.1",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "plotly.js-dist-min": "^2.17.0"
  }
}
