{
  "name": "sf-ui",
  "version": "0.1.0",
  "description": "An HTML/CSS/JS UI for visualizing scientific data.",
  "private": true,
  "scripts": {
    "import-wasm": "mkdir -p dist && cp ../lib-cpp/build-wasm/apps/libsf.* dist",
    "import-wasm-rs": "rm -rf ./node_modules/sf_rs/ && cp -R ../lib-rs/pkg/. ./node_modules/sf_rs",
    "test": "APP_VERSION=$npm_package_version jest",
    "test:coverage": "APP_VERSION=$npm_package_version jest --coverage",
    "lint": "eslint ./src",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "start": "APP_VERSION=$npm_package_version webpack serve --open",
    "build": "APP_VERSION=$npm_package_version webpack"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "modulePaths": [
      "<rootDir>/../lib-js/pkg/"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/assetMock.ts",
      "\\.(css|less|sass)$": "<rootDir>/src/styleMock.ts",
      "^assets/(.*)": "<rootDir>/src/assets/$1",
      "^components/(.*)": "<rootDir>/src/components/$1",
      "^model/(.*)": "<rootDir>/src/model/$1",
      "^util/(.*)": "<rootDir>/src/util/$1",
      "^worker/(.*)": "<rootDir>/src/worker/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/index.ts",
      "!src/model/LocalParserRepository.ts",
      "!src/worker/Worker.ts",
      "!src/worker/WorkerRs.ts",
      "!src/util/FileUtils.ts",
      "!src/util/WorkerUtils.ts"
    ],
    "setupFiles": [
      "<rootDir>/src/jest.stub.ts"
    ]
  },
  "keywords": [
    "sciformats"
  ],
  "author": "Robert Schiwon",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-typescript": "^7.23.0",
    "@stylistic/eslint-plugin": "^3.0.1",
    "@types/jest": "^29.5.5",
    "@types/plotly.js-dist-min": "^2.3.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "babel-jest": "^29.7.0",
    "css-loader": "^7.1.2",
    "eslint": "^9.4.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.3",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.0.2"
  },
  "dependencies": {
    "plotly.js-dist-min": "^2.35.3",
    "sf_js": "file:../lib-js/pkg"
  },
  "browser": {
    "crypto": false,
    "path": false,
    "fs": false,
    "env": false
  }
}
