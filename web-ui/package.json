{
  "name": "sciformats_web",
  "version": "0.1.2",
  "author": "Robert Schiwon <devrosch@gmx.net>",
  "description": "An HTML/CSS/JS web UI for visualizing scientific data read with sciformats, a library for reading scientific data formats.",
  "homepage": "https://sciformats.org/",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/devrosch/sciformats"
  },
  "keywords": [
    "parsing",
    "science",
    "data formats",
    "JCAMP-DX",
    "GAML",
    "AnDI",
    "netCDF"
  ],
  "private": true,
  "scripts": {
    "test": "APP_VERSION=$npm_package_version jest",
    "test:coverage": "APP_VERSION=$npm_package_version jest --coverage",
    "lint": "eslint ./src",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "start": "APP_VERSION=$npm_package_version webpack serve --open",
    "build": "APP_VERSION=$npm_package_version webpack"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "modulePaths": [
      "<rootDir>/../lib-js/pkg/"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/assetMock.ts",
      "\\.(css|less|sass)$": "<rootDir>/src/styleMock.ts",
      "^assets/(.*)": "<rootDir>/src/assets/$1",
      "^components/(.*)": "<rootDir>/src/components/$1",
      "^model/(.*)": "<rootDir>/src/model/$1",
      "^util/(.*)": "<rootDir>/src/util/$1",
      "^worker/(.*)": "<rootDir>/src/worker/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/index.ts",
      "!src/model/LocalParserRepository.ts",
      "!src/worker/Worker.ts",
      "!src/worker/WorkerRs.ts",
      "!src/util/FileUtils.ts",
      "!src/util/WorkerUtils.ts"
    ],
    "setupFiles": [
      "<rootDir>/src/jest.stub.ts"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-typescript": "^7.23.0",
    "@eslint/js": "^9.21.0",
    "@stylistic/eslint-plugin": "^5.2.3",
    "@types/jest": "^30.0.0",
    "@types/plotly.js-dist-min": "^2.3.2",
    "babel-jest": "^30.0.0",
    "css-loader": "^7.1.2",
    "eslint": "^9.21.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "prettier": "^3.3.3",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.39.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.0.2"
  },
  "dependencies": {
    "plotly.js-dist-min": "^3.0.1",
    "sciformats_js": "file:../lib-js/pkg"
  },
  "browser": {
    "crypto": false,
    "path": false,
    "fs": false,
    "env": false
  }
}
